package cau2;

import java.util.Scanner;

public class ExArr {
	public static void main (String[] args) {
		
	}
	public static Scanner sc = new Scanner(System.in);
	
	public void inArr(int a[]) {
		
		for (int i = 0; i < a.length; i++) {
			System.out.print("Nhap vao a["+i+"] = ");
			a[i] = sc.nextInt();
	
		}
		System.out.print("\n");
	}
	
	public void outArr(int a[]) {
		for (int i = 0; i < a.length; i++) {
			System.out.print(a[i] + " ");
	
		}
		System.out.print("\n");
	}
	
	public void sortA(int a[]) {
		for (int i = 0; i < a.length - 1; i++) 
			for (int j = i + 1; j < a.length; j++)
				if (a[i] > a[j]) {
					int temp = a[i];
						a[i] = a[j];
						a[j] = temp;
				}
		System.out.print("\n");	
	}
	
	public void sortD(int a[]) {
		for (int i = 0; i < a.length - 1; i++) 
			for (int j = i + 1; j < a.length; j++)
				if (a[i] < a[j]) {
					int temp = a[i];
						a[i] = a[j];
						a[j] = temp;
				}
		System.out.print("\n");	
	}
	
	public void demphantuLe(int a[]) {
		for (int i = 0; i < a.length; i++) {
			if (a[i] % 2 != 0)
				System.out.print(a[i] + " ");
		}
		System.out.print("\n");	
	}
	
	public void demphantuChan(int a[]) {
		for (int i = 0; i < a.length; i++) {
			if (a[i] % 2 == 0)
				System.out.print(a[i] + " ");
		}
		System.out.print("\n");	
}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		